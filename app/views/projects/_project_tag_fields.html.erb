<div class='nested-fields'>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.check_box :done %>
      <%= f.label :done %>
    </div>
    <%= link_to_add_association 'or create a new tag', f, :tag, class: 'add-tag' %>
    <%= link_to_remove_association f, class: "remove-tag btn btn-default btn-xs" do .glyphicon.glyphicon-remove %>
  </div>
